<Window x:Class="SeinfieldCalendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeinfieldCalendar"
        mc:Ignorable="d"
        Title="Seinfield Calendar" Height="320" Width="320" ResizeMode="NoResize">
    <StackPanel Margin="1" HorizontalAlignment="Center">
        <Grid HorizontalAlignment="Left">
            <Grid.ColumnDefinitions >
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Label HorizontalAlignment="Left" Grid.Column="0">Month:</Label>
            <Label HorizontalAlignment="Left" Grid.Column="1">Seinfield Calendar</Label>
        </Grid>
        
        <Grid x:Name="seinfieldCalendar" Background="Aqua" HorizontalAlignment="Center" VerticalAlignment="Top">
        </Grid>
    </StackPanel>
</Window>
