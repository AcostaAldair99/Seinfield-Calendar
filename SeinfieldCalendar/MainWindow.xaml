<Window x:Class="SeinfieldCalendar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeinfieldCalendar"
        mc:Ignorable="d"
        Title="Seinfield Calendar" Height="350" Width="350">
    <StackPanel Margin="1" HorizontalAlignment="Center">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="120"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="50"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            

            <Label x:Name="monthLabel" HorizontalAlignment="Left" Grid.Column="0"></Label>
            <Label HorizontalAlignment="Left" Grid.Column="1">Seinfield Calendar</Label>
            <Button x:Name="prevMonthButton" Grid.Column="2">Prev</Button>
            <Button x:Name="nextMonthButton" Grid.Column="3">Next</Button>
        </Grid>

        <Grid x:Name="seinfieldCalendar" Background="Gray" HorizontalAlignment="Center" Margin="10">
            
        </Grid>
    </StackPanel>
</Window>
